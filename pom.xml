        <developer>
            <id>mcla</id>
            <name>Melissa Clarke</name>
            <email>melissac1@gmail.com</email>
            <organization>Synchronoss</organization>
            <organizationUrl>http://www.synchronoss.com/</organizationUrl>
            <roles>
                <role>developer</role>
            </roles>
            <timezone>+0</timezone>
        </developer>
        <developer>
            <id>cjbooms</id>
            <name>Conor Gallagher</name>
            <email>cjbooms@gmail.com</email>
            <organization>Synchronoss</organization>
            <organizationUrl>http://www.synchronoss.com/</organizationUrl>
            <roles>
                <role>developer</role>
